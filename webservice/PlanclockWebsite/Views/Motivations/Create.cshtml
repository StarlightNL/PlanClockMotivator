@model PlanclockWebsite.Models.Motivation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Motivation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="reminderId" class="control-label"></label>
                <select class="form-control" asp-for="reminderId" asp-items="ViewBag.reminderOptions">
                    <option value="">Choose a reminder</option>
                </select>
                <span asp-validation-for="reminderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="motivationText" class="control-label"></label>
                <input asp-for="motivationText" class="form-control" />
                <span asp-validation-for="motivationText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
